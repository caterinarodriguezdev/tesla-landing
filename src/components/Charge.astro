---
import Section from "./Section.astro";
---

<Section
    title="Accesorios"
    subtitle="Carga a alta velocidad desde casa"
    color="black"
    showFooterContent
    id="charge"
>
    <div slot="footer" class="flex gap-x-6">
        <a
            class="border-[3px] border-black rounded bg-gray-950 text-white text-sm font-medium inline-block py-2 px-12 hover:bg-gray-900 transition-colors"
            href="#"
        >
            Comprar ahora
        </a>
    </div>
    <img
        slot="background"
        src="/accessories.avif"
        alt="Carga"
        class="object-center object-cover h-full w-full"
    />
</Section>
