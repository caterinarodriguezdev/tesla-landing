---
import LandingHeader from "../components/LandingHeader.astro";
import Hero from "../components/Hero.astro";
import ModelS from "../components/ModelS.astro";
import ModelThree from "../components/ModelThree.astro";
import ModelY from "../components/ModelY.astro";
import ModelX from "../components/ModelX.astro";
import Powerwall from "../components/Powerwall.astro";
import Charge from "../components/Charge.astro";
import Layout from "../layouts/Layout.astro";
---

<Layout title="Tesla by Elon">
	<LandingHeader />
	<main
		class="snap-y snap-mandatory relative w-full h-screen overflow-x-hidden overflow-y-auto no-scrollbar scroll-smooth"
	>
		<div class="snap-center">
			<Hero />
		</div>
		<div class="snap-center">
			<ModelS />
		</div>
		<div class="snap-center">
			<ModelThree />
		</div>
		<div class="snap-center">
			<ModelX />
		</div>
		<div class="snap-center">
			<ModelY />
		</div>
		<div class="snap-center">
			<Powerwall />
		</div>
		<div class="snap-center">
			<Charge />
		</div>
	</main></Layout
>
